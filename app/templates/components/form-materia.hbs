            {{g.periodo}}
          </td>
          <td>
            {{#link-to "grupo-detail" g.id }}
              <button class="btn btn-success btn-sm ">Detalles</button>
            {{/link-to}} <button class="btn btn-danger btn-sm "{{action 'destroyGrupo' materia g}}>Borrar</button>
          </td>
        </tr>


      {{/each}}
    </tbody>
</table>





