<ul>
{{#link-to 'nueva-materia'}}<button>Crear nueva materia</button>{{/link-to}}

</ul>
<table class="table table-hover table-sm table-bordered table-info">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Clave</th>
        <th scope="col">Materia</th>
        <th scope="col"> </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |materia|}}
        <tr>
          <th>
            {{materia.clave}}

          </th>
          <td>
            {{materia.nombre}}
          </td>
          <td>
            {{#link-to "materia-detail" materia.id }}
              <button class="btn btn-success btn-sm ">Detalles</button>
            {{/link-to}} <button class="btn btn-danger btn-sm "{{action 'borrar' materia}}>Borrar</button>
          </td>
        </tr>


      {{/each}}
    </tbody>
</table>
